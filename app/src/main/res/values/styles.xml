<resources>

    <style name="AppTheme" parent="android:Theme.Light" />
	<style name="myEditStyle" parent="@android:style/Widget.EditText">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	</style>
	<style name="myTextStyle" parent="@android:style/Widget.TextView">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textSize">20sp</item>
	    <item name="android:layout_marginTop">20dp</item>
	</style>
	<style name="myButtonStyle" parent="@android:style/Widget.Button">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textSize">20sp</item>
	    <item name="android:layout_marginTop">20dp</item>
	    <item name="android:background">@drawable/btn_selector</item>
	    <item name="android:textColor">#FFFFFF</item>
	</style>
	<style name="titlebarstyle" parent="@style/AppTheme">  
		<item name="android:windowTitleSize">38dip</item> 
		<item name="android:textSize">24sp</item>  
	</style> 
</resources>