<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    >
    <TextView 
        android:id="@+id/herMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_her"
        android:gravity="center_vertical"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_alignParentLeft="true"
        />
    <TextView 
        android:id="@+id/myMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_my"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:text="dsfads"/>
    <LinearLayout 
        android:id="@+id/herImageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_her"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        >
        <ImageView 
            android:id="@+id/herImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="200dp"
            android:maxHeight="200dp"
            android:scaleType="fitCenter"
            android:src="@drawable/loading"
            />
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/myImageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_my"
        android:layout_alignParentRight="true"
        android:gravity="center"
        >
        <ImageView 
            android:id="@+id/myImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="200dp"
            android:maxHeight="200dp"
            android:scaleType="fitCenter"
            android:src="@drawable/loading"
            />
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/herVoiceLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_her"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        >
        <ImageView 
            android:id="@+id/herVoiceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:maxWidth="200dp"
            android:maxHeight="200dp"
            android:src="@drawable/her_voice"
            />
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/myVoiceLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_my"
        android:layout_alignParentRight="true"
        android:gravity="center"
        >
        <ImageView 
            android:id="@+id/myVoiceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="200dp"
            android:maxHeight="200dp"
            android:scaleType="fitCenter"
            android:src="@drawable/my_voice"
            />
    </LinearLayout>

</RelativeLayout>